<?xml version="2.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.sctv" name="StreamCenter" version="1000.1.15" provider-name="SCTV">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common"/>
    <import addon="script.module.pyxbmct" />
    <import addon="script.module.requests"/>
    <import addon="script.tvguide.Vader"/>

  </requires>

  <extension point="xbmc.python.pluginsource"
            library="init.py">
        <provides>video</provides>
  </extension>

  <extension point="xbmc.service" library="service.py" start="login"></extension>


  <extension point="xbmc.addon.metadata">
    <summary lang="en">StreamCenter</summary>
	<description lang="en">Top Quality HD Streaming from around the world.
We offer fast, reliable, buffer free streaming.
Specialising in Sports Content, Football, Hockey, Cricket? We've got you covered. Anygame, anytime</description>
